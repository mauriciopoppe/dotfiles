#!/bin/bash
# ----------------------------------------------------
#          FILE:  zshmarks.plugin.zsh
#   DESCRIPTION:  oh-my-zsh plugin file.
#        AUTHOR:  Jocelyn Mallon
#       VERSION:  1.7.0
# ----------------------------------------------------


# bookmark definition is just the current dir
cur_dir="$(pwd)"
bookmark="$cur_dir"
BOOKMARK_FILE="$HOME/.bookmarks.data"
touch $BOOKMARK_FILE

if [[ -z $(grep "^$bookmark$" $BOOKMARK_FILE 2>/dev/null) ]]; then
  echo $bookmark >> $BOOKMARK_FILE
  sort $BOOKMARK_FILE > tmp && mv tmp $BOOKMARK_FILE
  echo "Bookmark '$bookmark' saved"
else
  echo "Bookmark already exists"
  exit 1
fi

# vim: set ft=bash
