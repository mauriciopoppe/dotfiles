#!/bin/bash
# ----------------------------------------------------
#          FILE:  zshmarks.plugin.zsh
#   DESCRIPTION:  oh-my-zsh plugin file.
#        AUTHOR:  Jocelyn Mallon
#       VERSION:  1.7.0
# ----------------------------------------------------

# bookmark definition is just the current dir
cur_dir="$(pwd)"
bookmark="$cur_dir"
BOOKMARK_FILE="$HOME/.boomarks.data"
touch $BOOKMARK_FILE

if [[ -z $(grep "^$bookmark$" $BOOKMARK_FILE 2>/dev/null) ]]; then
  echo "Directory '$bookmark' is not bookmarked"
  exit 1
else
  sed -i .bak "\%$bookmark%d" $BOOKMARK_FILE
  echo "bookmark deleted"
fi

# vim: set ft=bash
