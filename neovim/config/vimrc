" let $VIMPATH = expand('$DOTFILES_DIRECTORY/neovim/')
let $CONFIGPATH = fnamemodify(expand('<sfile>'), ':h')

function! s:source_file(path)
	execute 'source ' $CONFIGPATH . '/' . a:path
endfunction

" plug initialization
call s:source_file('base.vim')
call s:source_file('plugin-init.vim')
call s:source_file('general.vim')
call s:source_file('plugin-key-bindings.vim')
call s:source_file('key-bindings.vim')
call s:source_file('theme.vim')
call s:source_file('autocommand.vim')

" vim: set ts=2 sw=2 tw=80 noet :
