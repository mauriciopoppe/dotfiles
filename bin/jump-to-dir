#!/bin/bash

# [j]ump to dir in frecency list
#
#     $ jump-to-dir [fuzzy pattern]
#
# Filter in the frecency list generated by fasd
# - frecency list in reverse order
# - replace $HOME by ~
# - filter with fzf
# - replace ~ with $HOME

JUMPDIR=$(fasd -Rdl |\
  sed "s:$HOME:~:" |\
  fzf --no-sort -q "$*" |\
  sed "s:~:$HOME:")
[[ -d $JUMPDIR ]] && cd $JUMPDIR

# vim: set ft=bash
